{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        
    .image-container {
        position: relative;
        display: inline-block; /* Ensures container size is based on content */
    }
    /*Pour centrer le texte sur l'image*/
    .image-text {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-size: 20px;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 10px;
        box-sizing: border-box; /* Include padding in width and height */
    }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur ALL4SPORTS !</h1>
        {% for LISTESPORTS in listesports %}
           <div class="image-container">
            <a href="{{ path('app_categorieList', {id: LISTESPORTS.id}) }}">
                <img src="{{ LISTESPORTS.photos }}" width="250" height="250">
                <span class="image-text">{{LISTESPORTS.sport}}</span>
            </a>
        </div>
        {% endfor %}
    </div>
{% endblock %}
