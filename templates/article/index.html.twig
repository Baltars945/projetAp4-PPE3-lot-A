{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}
{% block body %}
<head>
    <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
</head>
<body>
    <div class="image-article" style="float:left">
        <img src="https://www.velos17loisirs.com/wp-content/uploads/2021/01/Velo-tout-terrain_%C2%A9VELOS17LOISIRS_2022_7.jpg" width="400" height="400">
    </div>
    <div class="text-article" style="float:left">
        {% for PRODUIT in produit %}
            {% if PRODUIT.id == id%}
                <h1>{{PRODUIT.nomproduit}}</h1>
                <h2>Description :{{PRODUIT.description}}</h2>
                <h2>Prix :{{PRODUIT.prix}} €</h2>
                <h3>Reférence : {{PRODUIT.reference}} </h3>
                <h5>Créer par {{PRODUIT.fournisseur}}</h5>
            {% endif %}
        {% endfor %}
        </div>
    <div class="text-commander" style="float:right">
    <table>
        <thead>
            <tr>
                <th>Commander</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th><button>Ajouter au panier</button></th>
        </tbody>
    </table>
    </div>
</body>

{% endblock %}
